@model ComicBookApp.Models.CreateViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    
    <div class="form-horizontal">
        @Html.LabelFor(t => t.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(t => t.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(t => t.Title)
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Author, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(t => t.Author, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Cover, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(c => c.Cover, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @*<div class="form-group">
        @Html.LabelFor(d => d.Studio.Name)
        @Html.EditorFor(d => d.Studio)
    </div>*@
    <div class="form-group">
        <input type="submit" value="Add a Post" class="btn btn-primary" />
    </div>
}

