@model ComicBookApp.Data.Model.Comic
@{
    ViewBag.Title = "Details";
}

<h2>Comic Details</h2>

<div>
    <h4>Comic</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dd>
            <img src=@Model.Cover style="height:150px; width:100px;"/>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ComicId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

