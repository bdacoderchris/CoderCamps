@model ComicBookApp.Models.UpdateViewModel
@{
    ViewBag.Title = "Update Your Comic Book";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(t => t.Comic.ComicId)
    <div class="form-horizontal">
        @Html.LabelFor(t => t.Comic.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(t => t.Comic.Title, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.ValidationMessageFor(t => t.Comic.Title)*@
    </div>
    <div class="form-group">
        @Html.LabelFor(t => t.Comic.Author, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(t => t.Comic.Author, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Comic.Cover, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(c => c.Comic.Cover, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @*<div class="form-group">
        @Html.LabelFor(d => d.Comic.Studio.Name)
        @Html.EditorFor(d => d.Comic.Studio.Name)
    </div>*@
    <div class="form-group">
        <input type="submit" value="Add a Post" class="btn btn-primary"/>
    </div>
}


